<UserControl x:Class="ClipboardHistory.ClipTextElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipboardHistory"
             mc:Ignorable="d" 
             Height="57" Width="300" Foreground="Black" FontSize="13" Margin="0,0,0,5">
    <Grid>
        <Border CornerRadius="5" Background="DimGray" >
            <TextBlock x:Name="ClipText" Margin="5" TextTrimming="CharacterEllipsis" ToolTipService.InitialShowDelay="2" ToolTipService.BetweenShowDelay="2"  ToolTipService.ShowDuration="30000"/>
        </Border>
    </Grid>
</UserControl>
